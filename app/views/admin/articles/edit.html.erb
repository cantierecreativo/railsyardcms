<%= content_for :title do %><%= t('admin.article.edit_article', :title => @article.title) %><% end %>

<header class="page_description">
    <h2><%= t('admin.article.edit_article', :title => @article.title) %></h2>
</header>

<section class="">
     <% unless @article.errors.blank? %>
     <div class="alert alert_red">
         <img height="24" width="24" src="/admin/images/icons/small/white/Alarm%20Bell.png">
         <%= t('admin.general.errors') %>: <%= errors_for @article %>
     </div>
     <% end %>
</section>

<div class="wrap cell_16">
    <%= form_for @article, :url => admin_article_path(@article), :html => { :multipart => true } do |f| %>
    <%= render :partial => "form", :object => @article, :as => :article, :locals => {:f => f} %>

    <div class="buttons">
        <%= link_to t('admin.general.delete'), admin_article_path(@article), :class => 'submit delete', :method => :delete, :confirm => t('admin.articles.are_you_sure_to_delete', :title => @article.title) %>
        <%= link_to t('admin.general.back'), admin_articles_url, :class => "submit" %>
        <%= submit_tag t('admin.general.save'), :class => "submit" %>
        <%= submit_tag t('admin.general.save_and_close'), :class => "submit", :name => 'save_and_close' %>
        <%= link_to t('admin.general.preview'), get_article_url(@article), :class => 'submit', :target => :_blank %>
    </div>
    <% end %>
</div>
